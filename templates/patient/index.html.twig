{% extends 'base.html.twig' %}

{% block title %}Liste des Patients{% endblock %}

{% block body %}
    {% for message in app.flashes("success") %}
        <div class="alert alert-success">
           <b> {{ message }} </b>   
        </div>
    {% endfor %}
    {% for message in app.flashes("error") %}
        <div class="alert alert-danger">
           <b> {{ message }} </b>   
        </div>
    {% endfor %}
    <div class="card-header text-center"><h1>Liste des Patients</h1></div>
        <div class="card-body bg-light>">
            <a href="{{ path('app_patient_new') }}"class="btn btn-success mb-3">
                <i class="fa fa-plus"></i>
            </a>
            <a href="{{ path('app_index') }}"class="btn btn-primary mb-3">
                <i class="fa fa-home"></i>
            </a>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th>Adresse</th>
                        <th>DateNaissance</th>
                        <th>Sexe</th>
                        {# <th>Medecin</th> #}
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {# {% for patient in user.patients %} #}
                    {% for patient in patients %}
                        <tr>
                            <td>{{ patient.id }}</td>
                            <td>{{ patient.nom }}</td>
                            <td>{{ patient.prenom }}</td>
                            <td>{{ patient.telephone }}</td>
                            <td>{{ patient.email }}</td>
                            <td>{{ patient.adresse }}</td>
                            <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
                            <td>{% if(patient.sexe == 'F') %}
                                Femme
                                {% else %}
                                Homme
                                {% endif %}
                            </td>
                            {# <td>{{ patient.user.username }}</td> #}
                            <td>
                                <a href="{{ path('app_patient_show', {'id': patient.id}) }}"class="btn  btn-primary">
                                    <i class="fa fa-eye "></i>
                                </a>
                                {# {% if is_granted('ROLE_USER') %}
                                    {% if patient.user.id == app.user.id %} #}

                                        <a href="{{ path('app_patient_edit', {'id': patient.id}) }}"class="btn  btn-warning">
                                            <i class="fa fa-edit "></i>
                                        </a>
                                        <a href="{{ path('app_patient_delete', {'id': patient.id}) }}"class="btn  btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    {# {% endif %}
                                {% endif %} #}
                                </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


{% endblock %}
