{% extends 'base.html.twig' %}

{% block title %}La liste des Randezvous{% endblock %}

{% block body %}
    {% for message in app.flashes("success") %}
        <div class="alert alert-success">
           <b> {{ message }} </b>   
        </div>
    {% endfor %}
    {% for message in app.flashes("error") %}
        <div class="alert alert-danger">
           <b> {{ message }} </b>   
        </div>
    {% endfor %}
    <div class="card-header text-center"><h1>liste des Randez-vous</h1></div>
    <div class="card-body bg-light>">
        <a href="{{ path('app_randezvou_new') }}"class="btn btn-success mb-3">
            <i class="fa fa-plus"></i>
        </a>
        <a href="{{ path('app_index') }}"class="btn btn-primary mb-3">
            <i class="fa fa-home"></i>
        </a>
    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Patient</th>
                <th>Consultation</th>
                {# <th>Medecin</th> #}
                <th>Date</th>
                <th>Heure debut</th>
                <th>Heure fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for randezvou in randezvous %}
            <tr>
                <td>{{ randezvou.id }}</td>
                <td>{{ randezvou.patient }}</td>
                <td>{{ randezvou.consultation }}</td>
                {# <td>{{ randezvou.patient.user.username }}</td> #}
                <td>{{ randezvou.date ? randezvou.date|date('Y-m-d') : '' }}</td>
                <td>{{ randezvou.heuredebut ? randezvou.heuredebut|date('H:i:s') : '' }}</td>
                <td>{{ randezvou.heurefin ? randezvou.heurefin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_randezvou_show', {'id': randezvou.id}) }}"class="btn btn-primary">
                        <i class="fa fa-eye "></i>
                    </a>
                    <a href="{{ path('app_randezvou_edit', {'id': randezvou.id}) }}"class="btn btn-warning">
                        <i class="fa fa-edit "></i>
                    </a>
                    <a href="{{ path('app_randezvou_delete', {'id': randezvou.id}) }}"class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
